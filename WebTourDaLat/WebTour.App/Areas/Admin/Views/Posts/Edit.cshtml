@model WebTour.WebApp.Areas.Admin.Models.PostEditModel

@{
    ViewData["PageTitle"] = "Thêm/Cập nhật bài viết";
}

<h1>Thêm/Cập nhật bài viết</h1>

<form asp-area="Admin"
      asp-controller="Posts"
      asp-action="Edit"
      enctype="multipart/form-data"
      method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="Id" />

    <div class="row mb-3">
        <label asp-for="PostsTypeId"
               class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select class="form-control"
                    asp-for="PostsTypeId" asp-items="Model.PostsTypeList">
                <option value="">-- Chọn loại bài viết --</option>
            </select>
            <span asp-validation-for="PostsTypeId"
                  class="text-danger"></span>

        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Title"
               class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text"
                   class="form-control"
                   asp-for="Title">
            <span asp-validation-for="Title"
                  class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="UrlSlug"
               class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text"
                   class="form-control"
                   asp-for="UrlSlug">
            <span asp-validation-for="UrlSlug"
                  class="text-danger"></span>
        </div>
    </div>

    <select id="mySelect" onchange="myFunction()">
        <option value="ban-tin">Bản tin</option>
        <option value="tours">Tours</option>
        <option value="co-so-luu-tru">Cơ sở lưu trú</option>
    </select>

    <script>
        function myFunction() {
            document.getElementById("demo").innerHTML :
            <div class="row mb-3" >
                <label asp -for= "Schedule"
                               class= "col-sm-2 col-form-label" > </label>
                < div class= "col-sm-10" >
                <input type= "text"
            class="form-control"
            asp -for= "Schedule" >
                <span asp - validation -for= "Schedule"
                                  class= "text-danger" > </span>
                    < /div>
                    < /div>

                    < div class= "row mb-3" >
                    <label asp -for= "Timetable"
                               class= "col-sm-2 col-form-label" > </label>
                        < div class= "col-sm-10" >
                        <input type= "text"
            class="form-control"
            asp -for= "Timetable" >
                <span asp - validation -for= "Timetable"
                                  class= "text-danger" > </span>
                    < /div>
                    < /div>
         }
    </script>



    <div class="row mb-3">
        <label asp-for="Prices"
               class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text"
                   class="form-control"
                   asp-for="Prices">
            <span asp-validation-for="Prices"
                  class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="ShortDescription"
               class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text"
                   class="form-control"
                   asp-for="ShortDescription">
            <span asp-validation-for="ShortDescription"
                  class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Description"
               class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text"
                   class="form-control"
                   asp-for="Description">
            <span asp-validation-for="Description"
                  class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="Meta"
               class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text"
                   class="form-control"
                   asp-for="Meta">
            <span asp-validation-for="Meta"
                  class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="CategoryId"
               class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select class="form-control"
                    asp-for="CategoryId" asp-items="Model.CategoryList">
                <option value="">-- Chọn chủ đề --</option>
            </select>
            <span asp-validation-for="CategoryId"
                  class="text-danger"></span>

        </div>
    </div>

    <div class="row mb-3">
        <label asp-for="SelectedTags"
               class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="text"
                   class="form-control"
                   asp-for="SelectedTags">
            <span asp-validation-for="SelectedTags"
                  class="text-danger"></span>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
    {
        <div class="row mb-3">
            <label asp-for="ImageUrl"
                   class="col-sm-2 col-form-label"></label>
            <div class="" col-sm-10>
                <img src="/@Model.ImageUrl"
                     style="max-width : 300px;" />
            </div>
        </div>
    }

    <div class="row mb-3">
        <label asp-for="ImageFile"
               class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input type="file"
                   class="form-control"
                   asp-for="ImageFile">
            <span asp-validation-for="ImageFile"
                  class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-10 offset-sm-2">
            <div class="form-check">
                <input class="form-check-input"
                       type="checkbox"
                       asp-for="Published">
                <label class="form-check-label"
                       asp-for="Published"></label>
            </div>
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">
            Lưu Các Thay Đổi
        </button>

        <a asp-area="Admin"
           asp-controller="Posts"
           asp-action="Index"
           class="btn btn-danger">
            Huỷ & Quay lại
        </a>
    </div>

</form>

@section scripts
    {
    <partial name="_ValidationScriptsPartial" />

    <script src="~/lib/speakingurl/speakingurl.min.js"></script>

    <script>
        $(function () {
            $('#Title').change(function () {
                var slug = getSlug(this.value);
                $('#UrlSlug').val(slug).trigger('blur');
            });
        });
    </script>
}

